%h2.page-title Change your password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.hidden_field :reset_password_token
  .d-flex.flex-column.justify-content-center.align-items-center
    .form-group.mb-3.w-50
      = f.label :password, "New password", class:"form-label"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control"
    .form-group.mb-3.w-50
      = f.label :password_confirmation, "Confirm new password", class:"form-label"
      = f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"
    .mb-3.d-flex.align-items-center.justify-content-center
      = f.submit "Change my password", class:"btn btn-lg btn-primary rounded-pill"
    = render "devise/shared/links"